{
    "name": "oli/graphql-utils",
    "description": "GraphQL Utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "oligus",
            "email": "oli.gustafsson@gmail.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src",
        "lint-fix": "phpcbf src",
        "md": "phpmd src text phpmd.xml",
        "md-xml": "phpmd src xml phpmd.xml",
        "analyze": "phan --color --progress-bar",
        "analyze-noop": "phan --no-progress-bar"
    },
    "require": {
        "webonyx/graphql-php": "^0.13.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^5.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.8",
        "phan/phan": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "GraphQLUtils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/src"
        },
        "classmap": [
            "tests/src"
        ]
    }
}
